{
  "name": "planum-storybook",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "storybook dev -p 6006 -s .storybook --no-open",
    "build": "storybook build --docs --loglevel error",
    "preview": "serve storybook-static",
    "deploy": "yarn build && netlify deploy --dir=./storybook-static --prod --site planum-storybook",
    "clean": "rimraf .turbo  node_modules",
    "chromatic": "chromatic --exit-zero-on-changes",
    "chromatic:check": "cross-env npx chromatic --project-token=$CHROMATIC_PROJECT_TOKEN"
  },
  "dependencies": {
    "@uvodohq/planum": "*",
    "@uvodohq/planum-editor": "*",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^7.0.0-beta.28",
    "@storybook/addon-actions": "^7.0.0-beta.28",
    "@storybook/addon-docs": "^7.0.0-beta.28",
    "@storybook/addon-essentials": "^7.0.0-beta.28",
    "@storybook/addon-interactions": "^7.0.0-beta.28",
    "@storybook/addon-links": "^7.0.0-beta.28",
    "@storybook/addons": "^7.0.0-beta.28",
    "@storybook/react": "^7.0.0-beta.28",
    "@storybook/react-vite": "^7.0.0-beta.28",
    "@storybook/testing-library": "^0.0.14-next.1",
    "@storybook/theming": "^7.0.0-beta.28",
    "@uvodohq/eslint-config": "*",
    "babel-loader": "^8.2.5",
    "chromatic": "^6.7.2",
    "classnames": "^2.3.1",
    "cross-env": "^7.0.3",
    "monday-ui-style": "^0.1.102",
    "planum-tsconfig": "*",
    "sass": "^1.56.0",
    "serve": "^13.0.2",
    "storybook": "^7.0.0-beta.28",
    "storybook-addon-react-docgen": "^1.2.42",
    "storybook-addon-themes": "^6.1.0",
    "typescript": "^4.6.4", 
    "vite": "^4.0.0"
  }
}
