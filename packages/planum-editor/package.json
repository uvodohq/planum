{
  "name": "@uvodohq/planum-editor",
  "version": "0.1.0",
  "description": "Planum Editor - text editor for Planum",
  "author": "UvodoHQ",
  "license": "MIT",
  "homepage": "https://uvodo.design",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uvodohq/planum-ui.git"
  },
  "bugs": {
    "url": "https://github.com/uvodohq/planum-ui/issues"
  },
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**",
    "package.json"
  ],
  "publishConfig": {
    "directory": "dist",
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "TIMING=1 eslint \"src/**/*.ts*\"",
    "clean": "rimraf .turbo node_modules dist"
  },
  "dependencies": {
    "@tiptap/extension-color": "^2.0.0-beta.12",
    "@tiptap/extension-link": "^2.0.0-beta.43",
    "@tiptap/extension-placeholder": "^2.0.0-beta.53",
    "@tiptap/extension-text-align": "^2.0.0-beta.31",
    "@tiptap/extension-text-style": "^2.0.0-beta.26",
    "@tiptap/react": "^2.0.0-beta.114",
    "@tiptap/starter-kit": "^2.0.0-beta.191"
  },
  "devDependencies": {
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "@uvodohq/planum": "*",
    "eslint": "^8.15.0",
    "eslint-config-planum": "*",
    "planum-tsconfig": "*",
    "react": "^18.1.0",
    "tsup": "^5.10.1",
    "typescript": "^4.5.3"
  }
}
