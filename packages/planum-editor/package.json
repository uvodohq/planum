{
  "name": "@uvodohq/planum-editor",
  "version": "1.0.0",
  "description": "Planum Editor - text editor for Planum",
  "author": "UvodoHQ",
  "license": "MIT",
  "homepage": "https://uvodo.design",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/uvodohq/planum.git"
  },
  "bugs": {
    "url": "https://github.com/uvodohq/planum/issues"
  },
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
